<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTO mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
   
<mapper namespace="com.example.mapper.MemberMapper">
   
   <!-- 회원가입 -->
   <insert id="memberJoin">
   
      insert into member1 values(#{memberId}, #{memberPw}, #{memberName}, #{memberNick}, #{memberMail}, #{memberMail1}, #{memberAddr1}, #{memberAddr2}, #{memberAddr3}, 0, sysdate, 0)
   
   </insert>
   
   <!-- 아이디 중복검사 -->
   <select id="idCheck" resultType="int">
   
      select count(*) from member1 where memberId = #{memberId}
   
   </select>
   
   <!-- 로그인 -->
   <select id="memberLogin" resultType="com.example.domain.MemberVO">
   
      SELECT * FROM member1 where MEMBERID = #{memberId} AND MEMBERPW = #{memberPw}
   
   </select>
   
   <!-- 회원 수정 -->
   <update id="memberUpdate">
      
      UPDATE MEMBER1 SET MEMBERPW = #{memberPw}, MEMBERNICK = #{memberNick}, MEMBERADDR1 =#{memberAddr1}, MEMBERADDR2 =#{memberAddr2}, MEMBERADDR3 =#{memberAddr3} WHERE MEMBERID = #{memberId}
      
   </update>
   
   <delete id="deletemember">
      
      delete from MEMBER1 WHERE memberId = #{memberId}
      
   </delete>

</mapper>